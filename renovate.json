{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "automerge": true,
        "enabled": true
    },
    "packageRules": [
        {
            "groupName": "dependencies",
            "matchUpdateTypes": [
                "major"
            ],
            "reviewers": [
                "rpdelaney"
            ]
        },
        {
            "automerge": true,
            "groupName": "dependencies",
            "matchUpdateTypes": [
                "patch",
                "pin",
                "digest",
                "minor"
            ]
        },
        {
            "matchManagers": ["github-actions"],
            "groupName": "github-actions",
            "automerge": true
        }
    ],
    "separateMinorPatch": false
}
